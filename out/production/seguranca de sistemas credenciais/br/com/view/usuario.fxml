<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="login" fx:id="VBlogin" spacing="20.0" styleClass="backgroundBlack" stylesheets="style.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.controller.Usuario">
    <children>
        <HBox spacing="20.0">
            <children>
                <VBox id="bgadm" alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0">
                    <children>
                        <Label id="labelWhite" fx:id="LBusuario" text="usuário:" />
                    </children></VBox>
                <VBox alignment="BOTTOM_RIGHT" spacing="10.0">
                    <children>
                        <Label id="labelWhite" text="usuário" />
                        <VBox id="backgroundBox" alignment="CENTER" maxWidth="350.0" prefWidth="350.0">
                            <children>
                                <HBox id="box" alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="e-mail:" />
                                        <Label fx:id="LBemail" text="Label" />
                                    </children>
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                                </HBox>
                                <Separator>
                                    <VBox.margin>
                                        <Insets top="2.0" />
                                    </VBox.margin>
                                </Separator>
                                <HBox id="box" alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="tipo de conta:" />
                                        <Label fx:id="LBconta" text="Label" />
                                    </children>
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                                </HBox>
                            </children>
                        </VBox>
                        <Button id="edit" defaultButton="true" onAction="#onAlterar" prefWidth="175.0" text="alterar perfil" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox alignment="BOTTOM_CENTER" prefHeight="50.0">
            <children>
                <Label id="LBversao" text="Gerenciador de estabelecimento versão 1.0" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
